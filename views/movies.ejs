<html lang="en"><link
rel="stylesheet"
href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
crossorigin="anonymous"
/>
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>
        <div class="movies content">
            <h1 style="text-align: center;padding-top: 1rem;">Please Enjoy Our Movie Selection</h1>
            <h3 style="margin-left: 2rem;">List of All Movies: </h3>
            <table style="text-align: center;" class="table table-striped">
                <thead style="text-align: center;">
                  <tr style="text-align: center;">
                    <th scope="col">Title</th>
                    <th scope="col">Genres</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Release Year</th>
                  </tr>
                </thead>
                <tbody >
                    <% if (theMovies.length > 0) { %>
                        <% theMovies.forEach(moviesList => { %>
                  <tr >
                    <td><%= `${moviesList.title}` %></td>
                    <td><%= `${moviesList.genres}` %></td>
                    <td><%= `${moviesList.rated}` %></td>
                    <td><%= `${moviesList.year}` %></td>     
                    <% }) %>
                    <% } %>
                  </tr>
                </tbody>
              </table>
    </body>
    <%- include('./partials/foot.ejs') %>
</html>